<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/dialog_shape"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_item_shape"
    android:layout_weight="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clear_all"
        android:layout_margin="17dp"
        android:background="@drawable/dialog_item_shape"
        android:text="CLEAR ALL"
        android:textColor="@color/LightTheme"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="25dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/dialog_item_shape"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"

                android:text="CLEAR SETUP"
                android:id="@+id/clear_setup"
                android:textColor="@color/LightTheme"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/dialog_shape"
                android:layout_margin="5dp"
                android:layout_weight="6">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_delete_setup"
                android:layout_margin="15dp">

            </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="CLEAR LOOP"
                android:id="@+id/clear_loop"
                android:textColor="@color/LightTheme"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/dialog_shape"
                android:layout_margin="5dp"
                android:layout_weight="6">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_delete_loop"
                android:layout_margin="15dp">
            </android.support.v7.widget.RecyclerView>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>